<?xml version="1.0"?>
<package>
	<distri name="ubuntu" upgrade="apt-get upgrade -y" install="apt-get install -y">
		<release version="all">
			<app class="sys">dpkg-dev gparted</app>
			<app class="Unknown">libgmp3-dev libmpfr-dev libmpc-dev</app>
			<app class="lib">libncurses5-dev zlib1g-dev libsdl1.2-dev libasound2-dev libasound2-doc</app>
			<app class="gui">libgtk2.0-dev libqt4-dev</app>
			<app class="Unknown">patch autoconf automake bison flex gawk gettext libtool m4 sed texinfo</app>
			<app class="scm" post="post.sh">subversion git-email msmtp</app>
			<?to add: mutt mutt-patched?>
			<app class="toolchain">gcc g++</app>
			<app class="toolchain" arch="x86_64">libc6-dev-i386</app>
			<app class="editor" post="setup.sh">vim vim-gnome</app>
			<app class="java">openjdk-6-jdk eclipse</app>
			<app class="server" post="nfs.sh">nfs-kernel-server</app>
			<app class="TFTP">tftp-hpa tftpd-hpa</app>
			<app class="serial" post="setup.sh">minicom ckermit</app>
			<app class="ereader">evince poppler-data</app>
			<app class="fs">nfs-common smbfs ntfs-3g</app>
			<app class="Unknown">mesa-utils</app>
			<app class="latex" default='n'>latex-cjk-chinese latex-beamer texlive-fonts-extra texlive-latex-extra texlive-fonts-recommended</app>
			<app class="vm" post="post.sh" default="n">virtualbox-ose</app>
			<app class="browser">chromium-browser chromium-codecs-ffmpeg flashplugin-installer</app>
			<app class="apache2" post="post.sh">apache2 libapache2-mod-python libapache2-mod-auth-mysql</app>
		</release>
		<release version="maverick">
			<app class="Unknown">libstdc++6-4.5-dev</app>
			<app class="Unknown">git</app>
			<app class="Unknown">eclipse-cdt</app>
			<app class="Unknown">liblzo2-2 liblzo2-dev</app>
			<app class="Unknown">dos2unix</app>
		</release>
		<release version="lucid">
			<app class="Unknown">libstdc++6-4.4-dev</app>
			<app class="Unknown">bzip2</app>
			<app class="Unknown">git-core</app>
		</release>
		<release version="karmic">
			<app class="Unknown">libstdc++6-4.4-dev</app>
			<app class="Unknown">bzip2</app>
			<app class="Unknown">git-core</app>
		</release>
	</distri>
	<distri name="debian" upgrade="apt-get upgrade -y" install="apt-get install -y">
		<release version="squeeze">
			<app class="Unknown">fixme</app>
		</release>
	</distri>
	<distri name="fedora" upgrade="yum upgrade -y" install="yum install -y">
		<release version="langhlin">
			<app class="Unknown">fixme</app>
		</release>
	</distri>
	<distri name="rhel" upgrade="yum upgrade -y" install="yum install -y">
		<release version="rhel6">
			<app class="Unknown">fixme</app>
		</release>
	</distri>
</package>
